<script>

function stampTime()
{
	deploydata = JSON.stringify({"project" : $("#projfld").val(), "memo" : $("#memo").val(), "spifileprefix" : $("#prefixfld").val()})
	jQuery.ajax({
		url: '/update',
		contentType:"application/json; charset=utf-8",
		type: 'POST',
		data: deploydata,
	});
